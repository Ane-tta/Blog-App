@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i|Oswald:200,300,400,500,600,700')

@import url('https://fonts.googleapis.com/css?family=Reenie+Beanie')

sans = 'Open Sans', sans-serif
oswald = 'Oswald', sans-serif

violet = #dfdee0
violet2 = #858388
black = #474748
black2 = #272727

time = .3s

body
    font-family sans
    font-size 14px
    color black
    
h1
h2
h3
h4
    font-family oswald
    margin 0
    color black2
    
input
textarea
    border none
    background-color violet
    border-radius 5px
    box-sizing border-box
    padding-left 30px
    padding-right 30px
textarea
    padding-top 20px
    padding-bottom 20px
label
    font-weight 600
.required
    color #ff34ff
    font-weight 700
    padding-left 5px
    
ul
    padding 0
    margin 0
    
li
    list-style none
    
a
    color black
    &:hover
        text-decoration none
article
    p
        line-height 1.66em
        
.btn
    padding 8px 20px
    transition time
    
.btn-regular
    background-color violet2
    color #fff
    &:hover
        background-color black
        color #fff
        
    
.wrap-box
    clear both
    display block
    
.emp
    color violet2
    
.header
    border-top 15px solid violet
    margin-bottom 60px
    
.top-logo
    text-align center
    margin 30px auto
    h1
        font-size 76px
        a
            color black2
        
.main-menu
    text-align center
    border 2px solid violet
    padding 5px 0
    li
        display inline-block
        font-size 16px
        padding 10px
        a
           text-transform uppercase
        
//***** Welcome Section *****
.welc-card
    margin 0 0 60px
.welc-avatar
    img
        border-radius 50%
        display block
        margin auto
        width 200px
        
.welc-content
    padding-left 20px
        
.welc-title
    text-transform uppercase
    margin-top 25px
    margin-bottom 10px
    
.welc-text
    color #a8a8a9
    font-style italic
    font-size 15px
    
    
//***** Promo Section *****
.promo-area
    margin-bottom 40px
.promo-items
    overflow hidden
    a
        width 33.333%
        float left
        height 200px
        position relative
        &:before
            content ''
            background-color rgba(74, 74, 74, 0.53)
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            
.promo-item
    background-position center
    background-size 100%
    background-repeat no-repeat
    transition time
    &:hover
        background-size 103%
    
.promo-title
    text-transform uppercase
    font-size 24px
    font-weight 600
    color #e6e5e8
    position relative
    z-index 3
    margin-left 8%
    margin-top 22%
    display block
    
    
//***** Post List Section *****
.post
    margin-bottom 40px
    overflow hidden
.post-content
.post-thumb
    width 50%
    float left
.post-thumb
    overflow hidden
    img
        width 100%
        transition time
    &:hover
        img
            transform scale(1.1,1.1)
.post-content
    padding-left 40px
.post-header
    overflow hidden
    margin-bottom 20px
.post-cat
    a
        background-color violet
        border-radius 7px
        padding 1px 3px
        margin-right 2px
        font-size 13px
        text-transform capitalize
        display inline-block
        
.post-title
    text-transform uppercase
    font-weight 700
    margin 20px 0
    
.post-date
    color violet2
    font-style italic
    float left
    font-size 12px
    
.post-by
    font-weight 700
    float right
    font-size 12px
    
.read-more
    color violet2
    font-weight 900
    font-size 30px
    line-height 0
    
.post-line
    background-color #f1f1f7
    width 100%
    height 3px
    margin-top 20px
        

//***** Sidebar Section *****
.sidebar
    padding-left 70px
.sidebar-item
    margin-bottom 40px
    &.cats
       li a
          text-transform capitalize
    &.featured
        img
            width 100%
    .featured-block
        position relative
        padding-top 12px
        a
            position absolute
            left 0
            bottom 20px
            background-color violet
            padding 5px 10px
            
.sidebar-title
    text-transform uppercase
    margin-bottom 14px
    position relative
    &:before
        content ''
        position absolute
        background-color violet2
        width 20%
        height 3px
        bottom -10px
        left 0
    
.cats
    li
        border-bottom 1px solid #f1f1f7
        padding 10px 0
        
        
//*************************
//***** One Post Page *****
//*************************
.post-page
    .post-header
        position relative
        padding-left 30px
        margin-bottom 30px
        &:before
            content ''
            background-color violet2
            position absolute
            height 100%
            width 3px
            left 0
    .post-date
    .post-by
        float left
    .post-date
        margin-right 20px
    p
        margin-bottom 30px
        line-height 1.8em

        
.post-attached-thumb
    margin-bottom 30px
    img
       width 100%
       
//***** Contact Form *****
.simple-form
    margin-bottom 100px
    h2
        text-transform uppercase
        position relative
        margin-bottom 40px
        display inline-block
        &:after
            @extends .sidebar-title:before
            width 100%
            bottom -15px
    input
        height 45px
        line-height 45px
    input
    textarea
        width 100%
        background #eae9ea
    textarea
        resize none
        height 300px
.form-item
    margin-bottom 13px
    
.form-error
    background-color #47658e
    color #fff
    border-radius 5px
    padding 13px 30px
    margin-top 8px
        
        

//***** Footer Section *****
.footer
    p
        margin 0
        text-align center
.footer-top
    background-color violet
    padding 30px 20px
    font-size 27px
    font-family 'Reenie Beanie', cursive
    
.footer-bottom
    margin 20px 0
    font-size 12px

    
    
@media (max-width: 991px)
    .sidebar
        display none
        

@media (max-width: 600px)
    .promo-items
        a
            height 130px
    .post-thumb
    .post-content
        width 100%
    .post-content
        padding-top 20px
        padding-left 0
        

@media (max-width: 414px)
    .promo-items
        a
            height 100px
    .promo-title
        margin-top 27%
        font-size 21px